# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Security
SECRET_KEY=your-secret-key-here-change-in-production

# Error Simulation (for testing)
ENABLE_RANDOM_ERRORS=true
ERROR_RATE=0.05

# Response Delays (milliseconds)
MIN_DELAY_MS=100
MAX_DELAY_MS=500

# Database (future use)
DATABASE_URL=sqlite:///./mock_api.db

# Redis (future use)
REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=INFO

# Email (future use)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@example.com

# Storage
UPLOAD_DIR=./uploads
STATIC_DIR=./static